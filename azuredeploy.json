{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "logicAppName": {
      "type": "string"
    },
    "logicAppLocation": {
      "type": "string",
      "defaultValue": "eastus2",
      "allowedValues": [
        "eastasia",
        "southeastasia",
        "centralus",
        "eastus",
        "eastus2",
        "westus",
        "northcentralus",
        "southcentralus",
        "northeurope",
        "westeurope",
        "japanwest",
        "japaneast",
        "brazilsouth",
        "australiaeast",
        "australiasoutheast",
        "southindia",
        "centralindia",
        "westindia",
        "canadacentral",
        "canadaeast",
        "westcentralus",
        "westus2",
        "[resourceGroup().location]"
      ],
      "metadata": {
        "description": "Location of the Logic App."
      }
    },
    "azurefileaccountName": {
      "type": "string"
    },
    "azurefileaccessKey": {
      "type": "securestring"
    },
    "azurefile": {
      "type": "string",
      "defaultValue": "azurefile"
    },
    "ftpserverAddress": {
      "type": "string"
    },
    "ftpuserName": {
      "type": "string"
    },
    "ftppassword": {
      "type": "securestring"
    },
    "ftpserverPort": {
      "type": "int",
      "defaultValue": ""
    },
    "ftpisssl": {
      "type": "bool",
      "defaultValue": ""
    },
    "ftpisBinaryTransport": {
      "type": "bool",
      "defaultValue": ""
    },
    "ftpdisableCertificateValidation": {
      "type": "bool",
      "defaultValue": ""
    },
    "lafolder": {
      "type": "string",
      "defaultValue": ""
    },
    "azufolder": {
      "type": "string",
      "defaultValue": ""
    },
    "ftp": {
      "type": "string",
      "defaultValue": "ftp"
    }
  },
  "variables": {
    "azufoldervar": "[concat('/fromccvendor/', parameters('azufolder'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2016-06-01",
      "name": "[parameters('logicAppName')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/connections', parameters('azurefile'))]",
        "[resourceId('Microsoft.Web/connections', parameters('ftp'))]"
      ],
      "location": "[parameters('logicAppLocation')]",
      "properties": {
        "definition": {
          "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "$connections": {
              "defaultValue": {},
              "type": "Object"
            }
          },
          "triggers": {
            "When_a_file_is_added_or_modified": {
              "recurrence": {
                "frequency": "Hour",
                "interval": 1
              },
              "metadata": {
                "LzIwMTcwOTE0": "[parameters('lafolder')]"
              },
              "type": "ApiConnection",
              "inputs": {
                "host": {
                  "connection": {
                    "name": "@parameters('$connections')['ftp']['connectionId']"
                  }
                },
                "method": "get",
                "path": "/datasets/default/triggers/onupdatedfile",
                "queries": {
                  "folderId": "LzIwMTcwOTE0",
                  "includeFileContent": true,
                  "inferContentType": true
                }
              }
            }
          },
          "actions": {
            "Create_file": {
              "runAfter": {},
              "type": "ApiConnection",
              "inputs": {
                "body": "@triggerBody()",
                "host": {
                  "connection": {
                    "name": "@parameters('$connections')['azurefile']['connectionId']"
                  }
                },
                "method": "post",
                "path": "/datasets/default/files",
                "queries": {
                  "folderPath": "[variables('azufoldervar')]",
                  "name": "@triggerOutputs()['headers']['x-ms-file-name']"
                }
              }
            }
          },
          "outputs": {}
        },
        "parameters": {
          "$connections": {
            "value": {
              "azurefile": {
                "id": "[concat(subscription().id,'/providers/Microsoft.Web/locations/', parameters('logicAppLocation'), '/managedApis/azurefile')]",
                "connectionId": "[resourceId('Microsoft.Web/connections', parameters('azurefile'))]"
              },
              "ftp": {
                "id": "[concat(subscription().id,'/providers/Microsoft.Web/locations/', parameters('logicAppLocation'), '/managedApis/ftp')]",
                "connectionId": "[resourceId('Microsoft.Web/connections', parameters('ftp'))]"
              }
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "location": "[parameters('logicAppLocation')]",
      "name": "[parameters('ftp')]",
      "properties": {
        "api": {
          "id": "[concat(subscription().id,'/providers/Microsoft.Web/locations/', parameters('logicAppLocation'), '/managedApis/ftp')]"
        },
        "displayName": "ftp",
        "parameterValues": {
          "serverAddress": "[parameters('ftpserverAddress')]",
          "userName": "[parameters('ftpuserName')]",
          "password": "[parameters('ftppassword')]",
          "serverPort": "[parameters('ftpserverPort')]",
          "isssl": "[parameters('ftpisssl')]",
          "isBinaryTransport": "[parameters('ftpisBinaryTransport')]",
          "disableCertificateValidation": "[parameters('ftpdisableCertificateValidation')]"
        }
      }
    },
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "location": "[parameters('logicAppLocation')]",
      "name": "[parameters('azurefile')]",
      "properties": {
        "api": {
          "id": "[concat(subscription().id,'/providers/Microsoft.Web/locations/', parameters('logicAppLocation'), '/managedApis/azurefile')]"
        },
        "displayName": "azurefile",
        "parameterValues": {
          "accountName": "[parameters('azurefileaccountName')]",
          "accessKey": "[parameters('azurefileaccessKey')]"
        }
      }
    }
  ],
  "outputs": {}
}